{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "dist",
    "lib": [
      "ES2021"
    ],
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
